# Qdrant Configuration
# Option 1: Qdrant Cloud
QDRANT_URL=https://seu-servidor-qdrant.cloud.io:6333
QDRANT_API_KEY=sua_api_key

# Option 2: Qdrant Local
# QDRANT_LOCAL_PATH=./qdrant_data

# Default collection name
COLLECTION_NAME=synapstor

# Embedding configuration
EMBEDDING_PROVIDER=FASTEMBED
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Chunking settings
MAX_CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNK_SEPARATORS=["\n\n", "\n", ". ", ", "]

# Tagging settings
TAG_SIMILARITY_THRESHOLD=0.8

# MCP tools settings
TOOL_STORE_DESCRIPTION=Store information for later retrieval.
TOOL_FIND_DESCRIPTION=Find related information in the vector database.
TOOL_CHUNK_DESCRIPTION=Split a document into parts and store them.

# General settings
PROJECT_NAME=Semantic Synapstor
LOG_LEVEL=INFO
